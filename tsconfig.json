{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"baseUrl": "./src/",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"@base/*": [
				"./base/*"
			],
		},
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}